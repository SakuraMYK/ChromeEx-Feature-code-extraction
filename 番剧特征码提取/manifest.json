{
  "manifest_version": 3,
  "name": "JoJo番剧搜索工具",
  "version": "1.0",
  "description": "用于搜索和提取番剧特征码的工具",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JoJo番剧搜索工具"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}